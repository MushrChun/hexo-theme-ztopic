  <article class="post">
    <header>
      <div class="post-title mobile-post-title">
        <h1><%= page.title %></h1>
          <div class="post-tags">
          <% if (page.tags && page.tags.length){ %>
            <%- list_tags(page.tags, {
              show_count: false,
              style: 'none',
              separator: ' '
            }) %>
          <% } %>
          </div>
      </div>
      <div class="post-meta">
        <span class="post-time"><i class="iconfont icon-calendar"></i><%- date(page.date,"YYYY-MM-DD")%></span>
        <!----------------------------------->
          <% if (theme.leancloud.app_id && theme.leancloud.app_key){ %>
            <i class="iconfont icon-divide"></i>
            <div class="post-visits"
                 data-url="<%- url_for(page.path) %>"
                 data-title="<%- page.title %>">
                <%- __('posts.visits') %>
              </div>
          <% } %>
        <!----------------------------------->
      </div>
    </header>
    <%- partial('partials/toc') %>
    <div class="post-content">
      <%- page.content %>
    </div>
    <div class="post-footer"></div>
  </article>
